<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    //食物的照片
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/apple"
        android:id="@+id/image_eaten"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_eaten">
        //食物的名称
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:id="@+id/name_eaten"/>
        //食物的卡路里
        <TextView
            android:id="@+id/Calory_eaten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_below="@id/name_eaten"/>
        //吃过这个食物的次数
        <TextView
            android:layout_below="@id/Calory_eaten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:id="@+id/times_eaten"
            android:text="吃过6次"/>
    </RelativeLayout>
</RelativeLayout>
