<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_weather"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/weatherpic"
    tools:context="com.example.a.ewhat.Weather">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginTop="45dp"
        android:id="@+id/showFoodLayout">
        <TextView
            android:id="@+id/jieqi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGrey"/>
        <TextView
            android:id="@+id/food_reccomend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="推荐美食"
            android:textColor="@color/colorGrey"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:background="#00000000"
        android:id="@+id/title_relative">
        <!--<ImageView
            android:id="@+id/title_city_manager"
            android:layout_height="45.0dp"
            android:layout_width="45.0dp"
            android:src="@drawable/manager">
        </ImageView>-->
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@mipmap/arrow"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:id="@+id/title_city_share"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_height="45.0dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:text="北京"
            android:textSize="25.0sp"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:id="@+id/todayinfo1_cityName">
        </TextView>
        <!--<ImageView
            android:id="@+id/title_city_share"
            android:layout_height="45.0dp"
            android:layout_width="45.0dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/share">
        </ImageView>-->
        <ImageView
            android:id="@+id/title_city_update"
            android:layout_height="28.0dp"
            android:layout_width="28.0dp"
            android:src="@mipmap/main_update_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp">
        </ImageView>
        <!--<ImageView
            android:id="@+id/title_city_locate"
            android:layout_height="45.0dp"
            android:layout_width="45.0dp"
            android:layout_toLeftOf="@id/title_city_update"
            android:src="@drawable/locate">
        </ImageView>-->
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/today_relative"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/title_relative"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:id="@+id/todayinfo1_relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/todayinfo1_linear1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--<TextView
                    android:id="@+id/food_reccomend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="47.0sp"/>-->

            </LinearLayout>
            <LinearLayout
                android:id="@+id/todayinfo1_linear2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_toLeftOf="@+id/todayinfo1_linear3">

                <ImageView
                    android:id="@+id/todayinfo1_pm25img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                </ImageView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/todayinfo1_linear3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="27.0sp"/>
                <TextView
                    android:id="@+id/todayinfo1_pm25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="20.0sp"/>
                <TextView
                    android:id="@+id/todayinfo1_pm25status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="20.0sp"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/todayinfo2_relative"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@id/todayinfo1_relative">
            <LinearLayout
                android:id="@+id/todayinfo2_linear1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
            <LinearLayout
                android:id="@+id/todayinfo2_linear2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/todayinfo2_linear1">

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/todayinfo1_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="湿度:57％"
        android:textColor="#FFFFFF"
        android:textSize="20.0sp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/todayinfo2_week"
        android:layout_alignStart="@+id/todayinfo2_week"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/todayinfo1_updateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发布时间 18:25"
        android:textColor="#FFFFFF"
        android:textSize="12.0sp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignBottom="@+id/todayinfo1_humidity"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今天 星期三"
        android:textColor="#FFFFFF"
        android:textSize="30.0sp"
        android:id="@+id/todayinfo2_week"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/todayinfo1_humidity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </TextView>

    <ImageView
        android:id="@+id/todayinfo2_weatherStatusImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/sunny"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/todayinfo2_week"
        android:layout_alignLeft="@+id/todayinfo2_week"
        android:layout_alignStart="@+id/todayinfo2_week" />

    <TextView
        android:id="@+id/todayinfo2_temperatureHigh"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="2°C"
        android:textColor="#FFFFFF"
        android:textSize="18.0sp"
        android:layout_alignBottom="@+id/hot"
        android:layout_toRightOf="@+id/hot"
        android:layout_toEndOf="@+id/hot">
    </TextView>

    <ImageView
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:src="@mipmap/cold"
        android:id="@+id/cold"
        android:layout_alignTop="@+id/todayinfo2_temperatureHigh"
        android:layout_toRightOf="@+id/todayinfo2_temperatureHigh"
        android:layout_toEndOf="@+id/todayinfo2_temperatureHigh"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp" />

    <TextView
        android:id="@+id/todayinfo2_temperatureLow"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="2°C"
        android:textColor="#FFFFFF"
        android:textSize="18.0sp"
        android:layout_alignBottom="@+id/cold"
        android:layout_toRightOf="@+id/cold">
    </TextView>

    <TextView
        android:id="@+id/todayinfo2_weatherState"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="晴"
        android:textColor="#FFFFFF"
        android:textSize="20.0sp"
        android:layout_above="@+id/hot"
        android:layout_marginBottom="10dp"
        android:layout_alignLeft="@+id/hot"
        android:layout_alignStart="@+id/hot"
        android:layout_alignRight="@+id/todayinfo2_week"
        android:layout_alignEnd="@+id/todayinfo2_week">
    </TextView>

    <ImageView
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@mipmap/hot"
        android:id="@+id/hot"
        android:layout_marginBottom="17dp"
        android:layout_alignBottom="@+id/todayinfo2_weatherStatusImg"
        android:layout_toRightOf="@+id/todayinfo2_weatherStatusImg"
        android:layout_toEndOf="@+id/todayinfo2_weatherStatusImg"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />

    <TextView
        android:id="@+id/todayinfo2_wind"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="微风"
        android:textColor="#FFFFFF"
        android:textSize="20.0sp"
        android:layout_alignBaseline="@+id/todayinfo2_weatherState"
        android:layout_alignBottom="@+id/todayinfo2_weatherState"
        android:layout_toRightOf="@+id/todayinfo2_weatherState"
        android:layout_toEndOf="@+id/todayinfo2_weatherState">
    </TextView>
    <!--<com.example.a.ewhat.SunBabyLoadingView
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>-->
</RelativeLayout>
