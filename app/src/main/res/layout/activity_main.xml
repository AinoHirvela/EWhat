<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.a.ewhat.MainActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!--图文显示ListView-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--添加一个ToolBar-->
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="查询食物"
                app:titleTextColor="@android:color/white"
                android:background="@color/colorMediumAquamarine">
            </android.support.v7.widget.Toolbar>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/nowlocation"
                android:text="正在定位..."/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </FrameLayout>

    <RadioGroup
        android:id="@+id/tabs_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#dcdcdc"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/location_tab"
            style="@style/Custom.TabRadioButton"
            android:checked="true"
            android:drawableTop="@drawable/message"
            android:text="位置"/>
        <RadioButton
            android:id="@+id/weather_tab"
            style="@style/Custom.TabRadioButton"
            android:drawableTop="@drawable/message"
            android:text="天气"/>
        <RadioButton
            android:id="@+id/add_tab"
            style="@style/Custom.TabRadioButton"
            android:drawableTop="@drawable/message"
            android:text="添加"/>

        <RadioButton
            android:id="@+id/food_tab"
            style="@style/Custom.TabRadioButton"
            android:drawableTop="@drawable/message"
            android:text="食物"/>
        <RadioButton
            android:id="@+id/my_tab"
            style="@style/Custom.TabRadioButton"
            android:drawableTop="@drawable/message"
            android:text="我的"/>
    </RadioGroup>


</LinearLayout>